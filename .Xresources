! general
URxvt.dpi: 96
URxvt.antialias: true
URxvt.hinting: true
URxvt.rgba: rgb
URxvt.autohint: false
URxvt.hintstyle: hintslight
URxvt.lcdfilter: lcddefault
URxvt.faceName: Fixed
URxvt.faceSize: 11
URxvt.letterSpace: 0

! wheel scroll
URxvt.secondaryWheel: 1

! do not scroll with output
URxvt.scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt.scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt.scrollTtyKeypress: true

! custom font
URxvt.font:         xft:Hack:regular:pixelsize=18
URxvt.boldFont:     xft:Hack:bold:pixelsize=18
URxvt.italicFont:   xft:Hack:italic:pixelsize=18

! remove scroll bar
URxvt.scrollBar: false

! blinking cursor
URxvt.cursorBlink: true

! transparency FTW
! it is valid to note that this is not a real transparency. it just copies
! the wallpaper behind the terminal and puts it as background of the terminal
! if you want real transparency, you need to use some composite manager
! (compton), for example
URxvt.depth: 32
URxvt.background: rgba:0000/0000/0200/c800

URxvt.inheritPixmap: true
URxvt.transparent: true
! URxvt.shading: 0 to 99 darkens, 101 to 200 lightens
URxvt.shading: 100

! clickable urls
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: firefox
URxvt.matcher.button: 1
URxvt.underlineURLs: true


